    "strict": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["ES2015", "ES2017", "ES2020"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}